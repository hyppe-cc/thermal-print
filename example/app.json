{
  "expo": {
    "name": "thermal-printer-example",
    "slug": "thermal-printer-example",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "expo.modules.thermalprinter.example",
      "infoPlist": {
        "UISupportedExternalAccessoryProtocols": ["com.epson.escpos"],
        "NSBluetoothAlwaysUsageDescription": "This app needs Bluetooth access to connect to thermal printers",
        "NSBluetoothPeripheralUsageDescription": "This app needs Bluetooth access to connect to thermal printers"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "expo.modules.thermalprinter.example",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "manifestQueries": {
              "uses-permission": [
                {
                  "name": "android.permission.BLUETOOTH",
                  "maxSdkVersion": 30
                },
                {
                  "name": "android.permission.BLUETOOTH_ADMIN",
                  "maxSdkVersion": 30
                },
                {
                  "name": "android.permission.ACCESS_FINE_LOCATION",
                  "maxSdkVersion": 30
                },
                {
                  "name": "android.permission.BLUETOOTH_SCAN"
                },
                {
                  "name": "android.permission.BLUETOOTH_CONNECT"
                }
              ],
              "uses-feature": [
                {
                  "name": "android.hardware.bluetooth_le",
                  "required": false
                }
              ]
            }
          }
        }
      ]
    ]
  }
}
